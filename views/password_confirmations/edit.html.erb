<%= form_for @user_authentication, :url => password_confirmation_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages password-errors">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="password-edit">
    <div class="field">
    <span>
      <%= f.label :password %>
    </span>
    <span>
      <%= f.password_field :password %>
    </span>
  </div>
  <div class="field">
    <span>
      <%= f.label :password_confirmation %>
    </span>
    <span>
      <%= f.password_field :password_confirmation %>
    </span>
  </div>
  <div class="password-edit-button"><%= f.submit "Update Password" %></div>
  </div>
<% end %>
